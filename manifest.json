{
    "manifest_version":3,
    "name": "NYT Connections Tracker",
    "version": "1.0",
    "description": "Track your game stats",
    "permissions": [
        "storage", 
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup/popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://www.nytimes.com/games/connections/*"],
            "js": ["contentScript.js"]
        }
    ]
}